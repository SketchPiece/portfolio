---
import StatusBar from "../components/CodeLayout/StatusBar.astro";
import ViewSwitcher from "../components/CodeLayout/ViewSwitcher.astro";
import FilesNavigation from "../components/CodeLayout/FilesNavigation.astro";
import MainLayout from "./MainLayout.astro";
import CodeEditor from "../components/CodeLayout/CodeEditor.astro";
import Dock from "../components/BrowserLayout/Dock.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<MainLayout title={title}>
  <main class="flex-1 flex flex-col bg-charcoal">
    <div class="flex flex-1">
      <ViewSwitcher />
      <FilesNavigation />
      <CodeEditor>
        hello world
        <slot /> 
      </CodeEditor> 
    </div>
    <StatusBar />
  </main>
  <Dock slot="outer-main" hidden />
</MainLayout>
